<launch>
  <!-- Publish joint states from a GUI slider -->
  <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="jsp_gui"/>

  <!-- Broadcast link transforms based on joint states -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rsp"/>

  <!-- Visualise everything -->
  <node pkg="rviz" type="rviz" name="rviz"
        args="-d $(find my_arm_description)/rviz/view.rviz" />
</launch>
