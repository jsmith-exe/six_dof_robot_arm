<?xml version="1.0"?>
<robot name="six_dof_arm">
  <!-- ======================== -->
  <!-- Base link  (rotates yaw) -->
  <!-- ======================== -->
  <link name="base_link">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- ==================================== -->
  <!-- Joint 1 (Base yaw)  &  Link 1 (upper arm) -->
  <!-- ==================================== -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="1.57" lower="-3.1416" upper="3.1416"/>
  </joint>

  <link name="link_1">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.30" radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.30" radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- ========================= -->
  <!-- Joint 2 (Shoulder pitch) -->
  <!-- ========================= -->
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="1.57" lower="-1.5708" upper="1.5708"/>
  </joint>

  <link name="link_2">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.30" radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.30" radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- ======================== -->
  <!-- Joint 3 (Elbow pitch)  -->
  <!-- ======================== -->
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="8" velocity="1.57" lower="-1.5708" upper="1.5708"/>
  </joint>

  <link name="link_3">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.30" radius="0.025"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.30" radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <!-- ====================== -->
  <!-- Joint 4 (Wrist pitch) -->
  <!-- ====================== -->
  <joint name="joint_4" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="5" velocity="2.09" lower="-1.5708" upper="1.5708"/>
  </joint>

  <link name="link_4">
    <visual>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.20" radius="0.02"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.20" radius="0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- ==================== -->
  <!-- Joint 5 (Wrist yaw) -->
  <!-- ==================== -->
  <joint name="joint_5" type="revolute">
    <parent link="link_4"/>
    <child link="link_5"/>
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="4" velocity="2.09" lower="-1.5708" upper="1.5708"/>
  </joint>

  <link name="link_5">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.10" radius="0.02"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.10" radius="0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- ===================== -->
  <!-- Joint 6 (Wrist roll) -->
  <!-- ===================== -->
  <joint name="joint_6" type="revolute">
    <parent link="link_5"/>
    <child link="tool0"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="2" velocity="2.09" lower="-3.1416" upper="3.1416"/>
  </joint>

  <link name="tool0">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.10"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.10"/>
      </geometry>
    </collision>
  </link>

</robot>
